{
  "schemaVersion": 1,
  "id": "enchantmentdisplay",
  "version": "${version}",

  "name": "Enchantment Display",
  "description": "Enchantments display their max level and what kind of item they go on",
  "authors": [
    "A5TR0spud"
  ],
  "contact": {
    "homepage": "https://github.com/A5TR0spud",
    "sources": "https://github.com/A5TR0spud/enchantment-display"
  },

  "license": "CC0-1.0",
  "icon": "assets/enchantmentdisplay/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "net.astrospud.enchantmentdisplay.EnchantmentDisplay"
    ]
  },
  "mixins": [
    {
      "config": "enchantmentdisplay.mixins.json",
      "environment": "client"
    }
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
